<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TextElement" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_800</item>
        <item name="colorPrimaryVariant">@color/gray_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/gray_800</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/logo</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/loader</item>
        <item name="android:windowSplashScreenAnimationDuration">2000</item>

        <!-- Customize your theme here. -->
    </style>
</resources>