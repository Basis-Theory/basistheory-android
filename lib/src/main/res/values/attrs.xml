<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="textColor" format="reference|color" />
    <attr name="text" format="string" />
    <attr name="removeDefaultStyles" format="boolean" />

    <declare-styleable name="TextElement">
        <attr name="textColor" />
        <attr name="text" />
        <attr name="removeDefaultStyles" />
        <attr name="hint" format="string" />
        <attr name="mask" format="string" />
        <attr name="keyboardType" format="enum">
            <enum name="text" value="1" />
            <enum name="number" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ReadOnlyTextElement">
        <attr name="textColor" />
        <attr name="text" />
        <attr name="removeDefaultStyles" />
    </declare-styleable>
</resources>